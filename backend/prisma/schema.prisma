datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Pet {
  id              Int       @id @default(autoincrement())
  nome            String    @db.VarChar(100)
  especie         String    @db.VarChar(50)
  dataNascimento  DateTime  
  descricao       String?   @db.Text 
  status          String    @default("dispon√≠vel") 
  adocao          Adocao?   @relation("PetToAdocao")
}

model Adotante {
  id              Int       @id @default(autoincrement())
  nomeCompleto    String    @db.VarChar(255)
  email           String    @unique
  telefone        String?   @db.VarChar(20)
  endereco        String?   @db.VarChar(255)
  adocoes         Adocao[]  @relation("AdotanteToAdocao")
  senhaHash       String? 
  role            String    @default("Adotante")
}

model Adocao {
  id              Int       @id @default(autoincrement())
  dataAdocao      DateTime  @default(now())
  petId           Int       @unique
  pet             Pet       @relation("PetToAdocao", fields: [petId], references: [id])
  adotanteId      Int
  adotante        Adotante  @relation("AdotanteToAdocao", fields: [adotanteId], references: [id])
}

model Usuario {
  id              Int       @id @default(autoincrement())
  nomeCompleto    String    @db.VarChar(255)
  email           String    @unique
  senhaHash       String    @db.VarChar(255)
  role            String    @default("Funcionario")
}